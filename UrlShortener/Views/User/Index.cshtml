@model List<User>
<partial name="_Notifications" />
<div class="card shadow border-0 mt-4">
	<div class="card-header bg-black m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Список Користувачів</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3 ">
			<div class="col-6">
			</div>
			<div class="col-6 text-end">
				<a asp-controller="Register" asp-action="Index" class="btn btn-primary">
					<i class="bi bi-file-earmark-plus"></i> Додати нового користувача
				</a>
			</div>
		</div>
		<table id="tblData" class="table table-bordered table-striped" style="width:100%">
			<thead>
				<tr>
					<th style="color: Black; text-align:center">Login</th>
					<th style="color: Black; text-align:center">Роль</th>
					<th style="color: Black; text-align:center">Видалення</th>
				</tr>
			</thead>
			<tbody style="text-align:center">
			</tbody>
		</table>
	</div>
</div>

@section Scripts {
	<script src="~/js/User.js"></script>
}